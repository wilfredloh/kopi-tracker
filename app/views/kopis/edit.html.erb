<h1>Edit kopi</h1>

<%= form_with scope: :kopi, model: @kopi, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :roastedness %><br>
    <%= form.text_area :roastedness %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Delete', kopi_path(@kopi),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>

<%= link_to 'Back', kopis_path %>