<!DOCTYPE html>
<html>
  <head>
    <title>Roastery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  	<% if user_signed_in? %>
			<%= link_to 'Log Out', destroy_user_session_url, method: :delete %>
		<% else %>
			<%= link_to 'Log In', new_user_session_url %>
		<% end %>
    <%= yield %>

  </body>
</html>